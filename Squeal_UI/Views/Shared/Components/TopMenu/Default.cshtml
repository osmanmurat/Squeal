@model AppUser?

<div class="container-fluid bg-faded fh5co_padd_mediya padding_786">
    <div class="container padding_786">
        <nav class="navbar navbar-toggleable-md navbar-light ">
            <button class="navbar-toggler navbar-toggler-right mt-3" type="button" data-toggle="collapse"
                    data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
                    aria-label="Toggle navigation">
                <span class="fa fa-bars"></span>
            </button>
            <a class="navbar-brand" href="#"><img src="~/24-news-css/images/logo.png" alt="img" class="mobile_logo_width" /></a>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item">
                        <a class="nav-link" asp-area=""
                           asp-controller="Home" asp-action="Index">Ana Sayfa <span class="sr-only">(current)</span></a>
                    </li>
                    @if (!string.IsNullOrEmpty(Model?.UserName))
                    {
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area=""
                               asp-controller="Account" asp-action="Profile">Hesabım<span class="sr-only">(current)</span></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home"
                               asp-action="TivitIndex">Tivit<span class="sr-only">(current)</span></a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Logout">Çıkış Yap<span class="sr-only">(current)</span></a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Account"
                               asp-action="Login">Giriş Yap<span class="sr-only">(current)</span></a>
                        </li>
                    }
                </ul>
            </div>
        </nav>
    </div>
</div>